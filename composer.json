{
    "name": "sentixtech/websocket",
    "version": "1.0.1",
    "description": "A pure PHP WebSocket server implementation with advanced features",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://github.com/sentixtech/websocket.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "Sentixtech\\Websocket\\": "src/"
        }
    },
    "authors": [
        {
            "name": "SentixTech",
            "email": "info@sentixtech.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "ext-sockets": "*"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sentixtech\\Websocket\\WebsocketServiceProvider"
            ]
        }
    },
    "scripts": {
        "serve": "php -r \"require 'vendor/autoload.php'; \\$server = new \\Sentixtech\\Websocket\\WebsocketServer(); \\$server->start();\""
    }
}
